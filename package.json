{
  "name": "heart",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "demo",
      "packages/ui",
      "packages/core"
    ]
  },
  "scripts": {
    "boot": "yarn prestart && yarn build",
    "build": "lerna run build --ignore @heart/core --no-private --stream",
    "clean": "lerna clean --yes && rimraf node_modules",
    "postinstall": "yarn pkg:check",
    "prestart": "yarn && yarn bootstrap",
    "bootstrap": "lerna bootstrap --use-workspaces",
    "lint": "lerna run lint --no-private --stream",
    "pkg": "manypkg run",
    "pkg:check": "manypkg check",
    "pkg:fix": "manypkg fix"
  },
  "dependencies": {
    "@manypkg/cli": "^0.18.0",
    "cross-env": "^7.0.3",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
